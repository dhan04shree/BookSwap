<% layout("/layouts/boilerplate")%>
<style>
    .signuppage{
    height: 100vh;
}
h4{
    margin-top: 30px;
  }
</style>
<h4 class="col-6 offset-3">Register</h4>
<div class="row mt-3 signuppage">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation"novalidate>
            <div class="mb-3 mt-3">
                <label for="username" class="form-label">Username:</label>
                <input name="username" type="text" placeholder="aria23" class="form-control" id="username" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input name="email" type="text" placeholder="aria2@mail.us" class="form-control" id="email" required>
 
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input name="password" type="password"  class="form-control" id="password" required>
 
            </div>
            <button class="btn add-btn">SignUp</button>
        </form>

    </div>
</div>