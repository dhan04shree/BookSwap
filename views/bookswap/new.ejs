<% layout("/layouts/boilerplate")%>
<style>
    p{
        font-size: 0.9em;
    }
</style>
    <div class="row mt-3">
        <div class="col-9 offset-1">
            <h4 style="margin-bottom: 2rem;">Create new listing</h4>
        <form method="POST" action="/bookswap" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="fullname" class="form-label"><b>Full Name</b></label>
            <input name="fullname" id="fullname" type="text" placeholder="aria" class="form-control" required>
            <div class="valid-feedback">looks good!</div>
            <div class="invalid-feedback">Please enter your name!</div>
        </div>
        <div class="mb-4">
            <label for="contact" class="form-label"><b>Contact No.</b> </label>
            <input name="contact" id="contact" type="text"  pattern="^\d{10}$" maxlength="10" placeholder="9999999999" class="form-control" required>
            <div class="invalid-feedback">Enter valid contact number!</div>
        </div>
        <div class="row">
            <div class="mb-4 col-md-4">
                <label for="branch" class="form-label"><b>Branch</b></label>
                <select name="branch" class="form-control" required>
                    <option value="">Select Branch</option>
                    <option value="aids">AI & DS</option>
                    <option value="comp">Computer</option>
                    <option value="it">IT</option>
                    <option value="entc">ENTC</option>
                    <option value="mec">Mechanical</option>
                    <option value="elec">Electrical</option>
                </select>
                <div class="invalid-feedback">Select your branch name</div>

            </div>
            <div class="mb-4 col-md-8">
                <label for="sem" class="form-label"><b>Semester</b></label>
            <select name="sem" id="sem" class="form-control" required>
                <option value="">Select Semester</option>
                <option value="sem1">1</option>
                <option value="sem2">2</option>
                <option value="sem3">3</option>
                <option value="sem4">4</option>
                <option value="sem5">5</option>
                <option value="sem6">6</option>
                <option value="sem7">7</option>
                <option value="sem8">8</option>
               
              </select>
                <div class="invalid-feedback">Select the semester</div>
            </div>
        
        </div>
